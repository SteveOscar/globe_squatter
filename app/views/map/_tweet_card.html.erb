<div id="tweet-card">
  <div class="tweet-form">
    <span>Tweet this map?</span>
    <%= link_to(image_tag("tweet-bird.png", id: "tweet-bird"),
        posts_tweet_path(tweet: "#{@map.capitalize} expense trends: #{request.original_url}"),
        remote: true,
        id: "send-tweet",
        method: :post ) %>
    <span>Nevermind</span>
    <%= image_tag('dead-bird.png', id: "dead-bird") %>
  </div>
</div>
