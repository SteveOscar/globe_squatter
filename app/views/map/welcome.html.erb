<%= image_tag('title.png', id: 'site-title') %>
<%= image_tag('glass.png', id: 'glass') %>

<div class="holder">
  <div id="blank-map" class="main-map"></div>
</div>

<div class="col s12 m6 left-card">
</div>

<div class="col s12 m6 right-card">
</div>

<div class="col s12 m6 circle welcome-circle">
  <div class="welcome-form">
    <%= form_tag('/display_map', :method => "get") do %>

    <h5 class="welcome-text">Set your perspective</h5>
    <!-- <span>(Your home country, or get a different view...)</span> -->

      <div class="select select-box">
        <%= select_tag(:country, options_for_select(@countries, selected: @countries[163])) %>
      </div>

      <h5 class="welcome-text">View data for...
      <div class="select select-box">
        <%= select_tag(:region, options_for_select([["Entire World", "world"],
                                                    ["Europe", "europe"],
                                                    ["North America", "north_america"],
                                                    ["South America", "south_america"],
                                                    ["Australia / NZ", "oceania"],
                                                    ["Asia", "asia"],
                                                    ["Africa", "africa"]], ["Entire World", "world"]),
        prompt: "Which Region?") %>
      </div>
      <%= submit_tag "Submit", class: "btn btn-lg btn-default btn-home blue lighten-2" %>
    </div>
  <% end -%>

